+let dataObj;
+
+if (ApollosConfig?.DATABASE?.URL) {
+  dataObj = require('./data/index.postgres');
+} else {
+  dataObj = require('./data/index');
+}
+
+const { migrations } = dataObj;
+
+// make sure this is called last.
+// (or at least after the apollos server setup)
