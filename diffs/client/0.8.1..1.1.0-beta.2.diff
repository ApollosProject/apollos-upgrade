+          return (
+            <Feature key={feature.id} {...feature} contentId={contentId} />
+          );
+        });
+      }}
+    </Query>
+  );
+};
+
+Features.propTypes = {
+  contentId: PropTypes.string,
+};
+
+export default Features;
